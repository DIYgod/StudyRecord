import java.net.*;
import java.io.*;

public class ChatServer {
	public static void main(String[] args)
	{
		ServerSocket server = null;
		try {
			server = new ServerSocket(1207);
			System.out.println("LinkStart!");
		} catch (IOException e) {
			System.out.println("Error: Can't listen to port " + server.getLocalPort());
			e.printStackTrace();
		}

		try {
			Socket client = null;
			client = server.accept();
		
			BufferedReader clientsay = new BufferedReader(new InputStreamReader(client.getInputStream()));
			PrintWriter serversay = new  PrintWriter(client.getOutputStream());
			
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
