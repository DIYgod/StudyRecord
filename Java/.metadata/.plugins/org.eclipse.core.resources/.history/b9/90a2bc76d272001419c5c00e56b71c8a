import java.net.*;
import java.awt.BorderLayout;
import java.io.*;
import javax.swing.*;

import javax.swing.JFrame;
import javax.swing.JTextField;

public class ChatServer {
	public static void main(String[] args)
	{
		new ChatFrame("test");
		
		ServerSocket server = null;
		Socket client = null;
		try {
			server = new ServerSocket(1207);
		} catch (IOException e) {
			System.out.println("Error: Can't listen to port");
			e.printStackTrace();
		}

		try {
			client = server.accept();
			System.out.println("LinkStart!");
			
			BufferedReader clientin = new BufferedReader(new InputStreamReader(client.getInputStream()));
			PrintWriter serverout = new  PrintWriter(client.getOutputStream());
			BufferedReader standin = new BufferedReader(new InputStreamReader(System.in));
			String s = "";
			
			while(!s.equals("q"))
			{
				System.out.println("Client: " + clientin.readLine());
				System.out.print("Server: ");
				s = standin.readLine();
				serverout.println(s);
				serverout.flush();
			}
			
			clientin.close();
			serverout.close();
			standin.close();
			server.close();
			client.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
