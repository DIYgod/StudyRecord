import java.util.*;

public class TestThread {
	public static void main(String[] args)
	{
		iThread t = new iThread();
		t.start();
		try {
			Thread.sleep(10000);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		t.flag = false;
	}
}

class iThread extends Thread
{
	boolean flag = true;
	public void run() 
	{
		while(flag)
		{
			System.out.println("===" + new Date() + "===");
			try {
				sleep(1000);
			} catch(InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
}